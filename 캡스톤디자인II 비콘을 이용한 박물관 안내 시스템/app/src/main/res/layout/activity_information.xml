<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:layout_margin = "0px"
    android:padding = "0px"
    android:orientation="vertical"
    tools:context="com.example.sec.msg_test.info">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight = "80"
        android:layout_margin = "0px"
        android:padding = "0px">

        <FrameLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작품 명 : "
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/things_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"/>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:paddingTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작품설명 : "
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/things_info"
                    android:paddingTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="15dp"
                    android:text="작품설명 내용부분"/>
            </LinearLayout>
        </FrameLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width = "fill_parent"
        android:layout_height = "0px"
        android:layout_weight = "6"
        android:layout_margin = "0px"
        android:padding = "0px"></FrameLayout>
    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="0px"
        android:id = "@+id/menu"
        android:layout_weight = "13"
        android:layout_margin = "0px"
        android:padding = "0px"
        >

        <FrameLayout
            android:layout_width = "0px"
            android:layout_height = "fill_parent"
            android:layout_weight = "4.5"
            android:layout_margin = "0px"
            android:padding = "0px"></FrameLayout>

        <ImageButton
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:id="@+id/info_bttn"
            android:background="@drawable/info_bttn"
            android:layout_weight = "26"
            android:layout_margin = "0px"

            />
        <FrameLayout
            android:layout_width = "0px"
            android:layout_height = "fill_parent"
            android:layout_weight = "5.5"
            android:layout_margin = "0px"
            android:padding = "0px"></FrameLayout>

        <ImageButton
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:id="@+id/home_bttn"
            android:background="@drawable/home_bttn"
            android:layout_weight="26"
            android:layout_margin = "0px"
            />

        <FrameLayout
            android:layout_width = "0px"
            android:layout_height = "fill_parent"
            android:layout_weight = "5.5"
            android:layout_margin = "0px"
            android:padding = "0px"></FrameLayout>

        <ImageButton
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:id="@+id/route_bttn"
            android:background="@drawable/route_bttn"
            android:layout_weight="26"
            android:layout_margin = "0px"/>
        <FrameLayout
            android:layout_width = "0px"
            android:layout_height = "fill_parent"
            android:layout_weight = "4.5"
            android:layout_margin = "0px"
            android:padding = "0px"></FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight = "1"
        android:layout_margin = "0px"
        android:padding = "0px"></FrameLayout>



</LinearLayout>
